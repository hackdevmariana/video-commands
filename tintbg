#!/usr/bin/env python3

from os import path
from pathlib import Path

import click

# Importa los dos comandos existentes
from removebg import remove_background, removebg
from tintimage import tint_image, tintimage

@click.command()
@click.argument('image_src')
@click.argument('color', default='black')
@click.argument('mode', default='light')
@click.argument('output_path', default='')
def process_image(image_src, color, mode, output_path):
    """Remove background and tint image."""

    # Llama al primer comando para remover el fondo
    # Puedes ajustar los argumentos según sea necesario
    removebg(image_src, output_path)

    # Llama al segundo comando para tintar la imagen
    # Puedes ajustar los argumentos según sea necesario
    tintimage(output_path, color, output_path, mode)

    click.echo(f"Image processing completed. Result saved to {output_path}")

if __name__ == '__main__':
    process_image()
